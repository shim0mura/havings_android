<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_between_content">
    <LinearLayout
        android:id="@+id/count_wrapper"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="@dimen/padding_between_content"
        android:paddingRight="@dimen/padding_between_content"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginBottom="-3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="done"/>
        <TextView
            android:id="@+id/done_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryText"
            android:textSize="22dp"
            android:text="100"/>
        <TextView
            android:layout_marginTop="-4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="times"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wrapper"
        android:orientation="vertical"
        android:layout_alignTop="@id/count_wrapper"
        android:layout_alignBottom="@id/count_wrapper"
        android:layout_toLeftOf="@id/count_wrapper"
        android:layout_toStartOf="@id/count_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="18dp"
            android:textColor="@color/primaryText"/>
        <LinearLayout
            android:id="@+id/notification"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_to_highlight_text"
                android:layout_marginEnd="@dimen/padding_to_highlight_text"
                android:src="@drawable/ic_alarm_black_18dp"/>
            <TextView
                android:id="@+id/notification_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>