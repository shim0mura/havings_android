<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/app_basic_padding"
    android:paddingTop="@dimen/padding_between_content"
    android:layout_marginBottom="@dimen/padding_between_content"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/tab_icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/item_icon_for_tab"/>
        <TextView
            android:id="@+id/tab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_list"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tab_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/primaryText"
        android:textSize="18dp"
        android:layout_marginTop="-3dp"
        />
</LinearLayout>