<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/app_basic_padding"
    android:paddingRight="@dimen/app_basic_padding"
    android:paddingBottom="@dimen/app_basic_padding"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/user_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/app_basic_padding"
        android:src="@drawable/bg"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/divider"
        />
    <LinearLayout
        android:id="@+id/user_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_basic_padding"
        android:paddingLeft="@dimen/app_basic_padding"
        android:layout_toRightOf="@id/user_thumbnail"
        android:layout_toLeftOf="@+id/following_state"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="テスト"
            android:textSize="16sp"
            android:textColor="@color/primaryText"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/prefix_unit_item_count_en"/>
            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_to_highlight_text"
                android:paddingRight="@dimen/padding_to_highlight_text"
                android:text="100"
                android:textColor="@color/primaryText"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_item_count_en"
                android:textSize="14dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/following_state"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/user_info"
        android:layout_alignBottom="@id/user_info"
        android:layout_marginTop="@dimen/app_basic_padding"
        android:layout_marginBottom="@dimen/app_basic_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">
        <Button
            android:id="@+id/follow_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_add_black_18dp"
            android:drawableStart="@drawable/ic_person_add_black_18dp"
            android:text="@string/action_follow_short"
            android:visibility="gone"/>
        <Button
            android:id="@+id/unfollow_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_already_follow"
            android:textColor="@color/primaryTextWhite"
            android:background="@color/following" />
    </LinearLayout>

</RelativeLayout>