            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_space_height"
            android:src="@drawable/bg1"
            android:scaleType="centerCrop"
            />
            <View
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/flexible_space_height"
                android:background="@drawable/shadow"
            />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/app_basic_padding"
                android:paddingRight="@dimen/app_basic_padding"
                android:layout_below="@id/image">
                <LinearLayout
                    android:id="@+id/upper_item_meta_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/app_basic_padding"
                        >

                        <TextView
                            android:id="@+id/item_count_anchor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="having"
                            />
                        <TextView
                            android:id="@+id/item_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3dp"
                            android:text="100"
                            android:textSize="32dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_below="@id/item_count_anchor"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="items"
                            android:layout_toRightOf="@id/item_count"
                            android:layout_alignBaseline="@id/item_count"
                            android:paddingLeft="5dp"

                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/app_basic_padding"
                        android:layout_marginTop="12dp"
