                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_visibility_black_18dp"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="111"
                                    android:paddingRight="@dimen/app_basic_padding"
                                    />


                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/adding_item_meta_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
