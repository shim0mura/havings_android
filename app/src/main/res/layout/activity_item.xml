                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:layout_marginRight="4dp"
                                android:layout_marginTop="3dp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="aaaaa"
                                android:background="#77FF0000"
                                android:paddingLeft="2dp"
                                android:paddingRight="2dp"
                                android:layout_marginRight="4dp"
