                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"/>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>