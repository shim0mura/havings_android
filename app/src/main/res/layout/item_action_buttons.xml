<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/item_action_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_basic_padding"
        android:paddingBottom="@dimen/padding_between_content"
        android:background="@drawable/border_underline">
        <LinearLayout
            android:id="@+id/action_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:id="@+id/action_favorite_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite_black_18dp"/>
            <TextView
                android:id="@+id/action_favorite_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_favorite_item"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share_black_18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_share_item"
                android:textSize="18dp"/>
        </LinearLayout>
    </LinearLayout>

</merge>