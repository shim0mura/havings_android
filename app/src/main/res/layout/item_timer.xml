<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/timer_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_between_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_between_content"
                android:paddingLeft="@dimen/app_basic_padding"
                android:paddingBottom="@dimen/padding_between_content"
                android:orientation="horizontal"
                android:background="@color/colorPrimary">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_schedule_white_24dp"
                    android:layout_marginRight="@dimen/padding_to_highlight_text"
                    />
                <TextView
                    android:id="@+id/timer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_setting_timers"
                    android:textColor="@color/primaryTextWhite"
                    android:textSize="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/app_basic_padding"
                android:id="@+id/no_timer"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_no_timer"
                    android:textSize="18dp"
                    android:textColor="@color/primaryText"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/prompt_no_timer_detail"
                    android:layout_marginTop="@dimen/padding_between_content"
                    />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/add_timer_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/prompt_add_timer_button"
            android:drawableLeft="@drawable/ic_alarm_add_black_18dp"
            android:drawableStart="@drawable/ic_alarm_add_black_18dp"/>
    </LinearLayout>
</merge>