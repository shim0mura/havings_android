<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/app_basic_padding"
    android:paddingRight="@dimen/app_basic_padding"
    android:paddingBottom="@dimen/app_basic_padding"
    >
    <!--
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/app_basic_padding"
        android:src="@drawable/bg"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/divider"
        />
        -->
    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_thumbnail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/app_basic_padding"
        android:src="@drawable/bg"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/app_basic_padding"
        android:paddingLeft="@dimen/padding_between_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/owner_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_type"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/item_icon_for_tab"
                />
            <TextView
                android:id="@+id/item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="テスト"
                android:textSize="16sp"
                android:textColor="@color/primaryText"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="items"
                android:textSize="14dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/padding_between_content"
                android:src="@drawable/ic_favorite_black_18dp"/>
            <TextView
                android:id="@+id/item_favorite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.wefika.flowlayout.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/item_tag"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                >

                </com.wefika.flowlayout.FlowLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>