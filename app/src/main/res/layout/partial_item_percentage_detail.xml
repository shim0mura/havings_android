<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_between_grid">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_category_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/twitterlogo"
                android:layout_marginRight="@dimen/padding_between_grid"
                android:layout_marginEnd="@dimen/padding_between_grid"/>
            <View
                android:id="@+id/category_depth_padding1"
                android:layout_width="45dp"
                android:layout_height="1dp"
                android:visibility="gone"></View>
            <View
                android:id="@+id/category_depth_padding2"
                android:layout_width="65dp"
                android:layout_height="1dp"
                android:visibility="gone"></View>
            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="あああ"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignTop="@id/category_name"
            android:layout_alignBottom="@id/category_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="aaaaa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unit_item_count"
                android:layout_marginEnd="@dimen/padding_between_grid"
                android:layout_marginRight="@dimen/padding_between_grid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("/>
            <TextView
                android:id="@+id/item_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="aaaaa"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%)"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>