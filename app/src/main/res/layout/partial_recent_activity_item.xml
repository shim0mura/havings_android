<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_between_grid"
    android:paddingBottom="@dimen/padding_between_grid"
    android:layout_marginRight="@dimen/padding_between_content"
    android:layout_marginEnd="@dimen/padding_between_content"

    android:background="@drawable/border_underline">
    <ImageView
        android:id="@+id/event_type_icon"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/padding_between_grid"
        android:layout_marginEnd="@dimen/padding_between_grid"
        android:src="@drawable/ic_delete_black_18dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaa"/>
        <LinearLayout
            android:id="@+id/event_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/item_thumbnail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/bg"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/divider"
                />
            <TextView
                android:id="@+id/event_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>