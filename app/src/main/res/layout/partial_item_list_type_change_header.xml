<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_between_content"
    android:paddingBottom="@dimen/padding_between_content"
    android:layout_marginBottom="@dimen/padding_between_content"
    android:paddingRight="@dimen/app_basic_padding"
    android:background="@drawable/border_underline"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/show_nested"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_format_align_right_black_18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_show_nested_item_list"/>
    </LinearLayout>
    <View
        android:layout_width="@dimen/app_basic_padding"
        android:layout_height="1dp" />
    <LinearLayout
        android:id="@+id/show_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_list_black_18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prompt_show_item_list"/>
    </LinearLayout>

</LinearLayout>
