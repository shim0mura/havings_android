<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_text"
        android:scrollbars="vertical"
        />

    <ListView
        android:id="@+id/nested_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/app_basic_padding"
        android:layout_marginLeft="@dimen/padding_between_content"
        android:layout_marginRight="@dimen/padding_between_content"
        android:divider="#00000000"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/no_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/prompt_no_item"
        android:gravity="center"
        android:visibility="gone"/>

</LinearLayout>